@model AccountTeamCreateOrEditModel
@{
    ViewData["Title"] = $"{Localizer.Get("CreateOrEdit")} {Localizer.Get("Account Teams")}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.useForm = true;
    ViewBag.useImageUploud = true;
    ViewBag.userFormRepeater = true;
    // int id = ViewData["id"] != null ? (int)ViewData["id"] : 0;

}

<!-- BEGIN: Content-->
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-start mb-0">@ViewData["Title"]</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/AccountTeamEntity/AccountTeam/Profile/@Model.Fk_Account">@Localizer.Get("Account Profile")</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    @ViewData["Title"]
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content-body">
            <section id="multiple-column-form">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <form class="form" asp-action="CreateOrEdit" enctype="multipart/form-data">
                                    <div asp-validation-summary="All" class="text-danger">@ViewData["Error"]</div>
                                    <div class="d-flex">
                                        <a href="#" class="me-25">
                                            <img src="@($"{Model.StorageUrl}{Model.ImageUrl}")" class="uploadedAvatar account-upload-img rounded me-50" height="100" width="100">
                                        </a>
                                        <!-- upload and reset button -->
                                        <div class="d-flex align-items-end mt-75 ms-1">
                                            <div>
                                                <label for="account-upload" class="btn btn-sm btn-primary mb-75 me-75 waves-effect waves-float waves-light">@Localizer.Get("Upload Image")</label>
                                                <input type="file" id="account-upload" class="account-upload" hidden="" name="ImageFile" accept="image/*">
                                                <button type="button" class="account-reset btn btn-sm btn-outline-secondary mb-75 waves-effect">@Localizer.Get("Reset")</button>
                                            </div>
                                        </div>
                                        <!--/ upload and reset button -->
                                    </div>
                                    <br />

                                    <div class="row mb-1">
                                        <input type="hidden" asp-for="Fk_Account">
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label asp-for="Name" class="form-label"></label>
                                                <input asp-for="Name" class="form-control" placeholder="@Localizer.Get("Enter") @(Localizer.Get("Name"))" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label asp-for="TotalPoints" class="form-label"></label>
                                                <input asp-for="TotalPoints" class="form-control" placeholder="@Localizer.Get("Enter") @(Localizer.Get("TotalPoints"))" />
                                                <span asp-validation-for="TotalPoints" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-4 col-12">
                                            <div class="mb-1">
                                                <label asp-for="TotalMoney" class="form-label"></label>
                                                <input asp-for="TotalMoney" class="form-control" placeholder="@Localizer.Get("Enter") @(Localizer.Get("TotalMoney"))" />
                                                <span asp-validation-for="TotalMoney" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-12 col-12">
                                            <div class="mb-1">
                                                <label asp-for="Fk_Season" class="form-label"></label>
                                                <select class="form-control" asp-for="Fk_Season" asp-items="@(new SelectList(ViewData["Season"] as Dictionary<string,string>,"Key","Value"))"></select>
                                                <span asp-validation-for="Fk_Season" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>
                                    
                                    <hr />
                                    <div class="row">
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary me-1">@Localizer.Get("Submit")</button>
                                            <button type="reset" class="btn btn-outline-secondary me-1">@Localizer.Get("Reset")</button>
                                            <a asp-action="Profile" asp-route-id="@Model.Fk_Account" class="btn btn-warning"> @Localizer.Get("Back") </a>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>

    </div>
</div>

@section scripts{
    <script>

        function resetRepeaterData() {
            $(".game-id").last().val('0');
           $(".game-name").last().val('');
           $(".game-name-en").last().val('');
           $(".gameid365").last().val('');

        }

        $(document).ready(function () {
            $('button[data-repeater-delete][newRepeater]').each(function () {
                $(this).click();
            });

            $("#add-new-btn").on('click', function () {
                setTimeout(resetRepeaterData, 500)
            });

        });

    </script>
}
