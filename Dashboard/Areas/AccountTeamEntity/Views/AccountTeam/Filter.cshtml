@model AccountTeamFilter
@{
    ViewData["Title"] = Localizer.Get("Advanced Search");
    ViewBag.emptyLayout = true;
}


<div class="collapse" id="AdvancedFilter">
    <div class="card-header border-bottom">
        <h4 class="card-title">@Localizer.Get("Advanced Search")</h4>
    </div>

    <div class="card-body mt-2">
        <form asp-action="LoadTable" class="filter">
            <div class="row g-1 mb-md-1">
                <div class="col-md-6">
                    <label asp-for="AccountFullName" class="form-label"></label>
                    <div class="mb-0">
                        <input asp-for="AccountFullName" class="form-control" placeholder="@Localizer.Get("Enter") @(Localizer.Get("AccountFullName"))">
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="AccountUserName" class="form-label"></label>
                    <div class="mb-0">
                        <input asp-for="AccountUserName" class="form-control" placeholder="@Localizer.Get("Enter") @(Localizer.Get("UserName"))">
                    </div>
                </div>
            </div>

            <div class="row g-1 mb-md-1">
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Season" class="form-label"></label>
                        <select asp-for="Fk_Season" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Season"] as Dictionary<string, string>, "Key", "Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_FavouriteTeam" class="form-label"></label>
                        <select asp-for="Fk_FavouriteTeam" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string, string>, "Key", "Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12">
                    <label asp-for="CreatedAtFrom" class="form-label"></label>
                    <div class="mb-0">
                        <input type="text" class="form-control dt-date flatpickr-range dt-input flatpickr-input active" data-column="1" placeholder="@Localizer.Get("From Date To Date")" data-column-index="0" name="dt_date" readonly="readonly">
                        <input type="hidden" class="form-control dt-date start_date dt-input" data-column="1" data-column-index="0" asp-for="CreatedAtFrom">
                        <input type="hidden" class="form-control dt-date end_date dt-input" asp-for="CreatedAtTo" data-column="1" data-column-index="0">
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="PointsFrom" class="form-label">@Localizer.Get("PointsFrom")</label>
                        <input type="text" class="form-control" asp-for="PointsFrom">
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="PointsTo" class="form-label">@Localizer.Get("PointsTo")</label>
                        <input type="text" class="form-control" asp-for="PointsTo">
                    </div>
                </div>
                
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_CommunicationStatuses" class="form-label"></label>
                        <select asp-for="Fk_CommunicationStatuses" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["CommunicationStatus"] as Dictionary<string, string>, "Key", "Value"))">
                            <option value="">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>

            </div>
            <hr />
            <br />
            <div class="row g-1 mb-md-1">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">@Localizer.Get("Search")</button>
                    <button type="reset" class="btn btn-outline-secondary">@Localizer.Get("Reset")</button>

                </div>
            </div>
        </form>
    </div>

    <!-- END: Content-->
</div>

