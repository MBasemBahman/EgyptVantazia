@model PlayerTransferFilter
@{
    ViewData["Title"] = Localizer.Get("Advanced Search");
    ViewBag.emptyLayout = true;
}


<div class="collapse" id="AdvancedFilter">
    <div class="card-header border-bottom">
        <h4 class="card-title">@Localizer.Get("Advanced Search")</h4>
    </div>

    <div class="card-body mt-2">
        <form asp-action="LoadTable" class="filter">

            <div class="row g-1 mb-md-1">
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Season" class="form-label"></label>
                        <select asp-for="Fk_Season" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Season"] as Dictionary<string, string>, "Key", "Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_GameWeak" class="form-label"></label>
                        <select asp-for="Fk_GameWeak" class="select2 form-select">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="TransferTypeEnum" class="form-label"></label>
                        <select asp-for="TransferTypeEnum" class="form-select">
                            <option value="">@Localizer.Get("All")</option>
                            <option value="1">@Localizer.Get("Buying")</option>
                            <option value="2">@Localizer.Get("Selling")</option>
                        </select>
                    </div>
                </div>
                
                @if (Model.Fk_Player == 0 && Model.Fk_Team == 0)
                {
                    <div class="col-md-6 col-12">
                        <div class="mb-1">
                            <label asp-for="Fk_Team" class="form-label"></label>
                            <select asp-for="Fk_Team" class="select2 form-select">
                                <option value="0">@Localizer.Get("All")</option>
                            </select>
                        </div>
                    </div>
                }
                
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="IsFree" class="form-label"></label>
                        <select asp-for="IsFree" class="form-select">
                            <option value="">@Localizer.Get("All")</option>
                            <option value="true">@Localizer.Get("Yes")</option>
                            <option value="false">@Localizer.Get("No")</option>
                        </select>
                    </div>
                </div>

            </div>
            <hr />
            <br />
            <div class="row g-1 mb-md-1">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">@Localizer.Get("Search")</button>
                    <button type="reset" class="btn btn-outline-secondary">@Localizer.Get("Reset")</button>

                </div>
            </div>
        </form>
    </div>

    <!-- END: Content-->
</div>

