@model PlayerGameWeakFilter
@{
    ViewData["Title"] = Localizer.Get("Advanced Search");
    ViewBag.emptyLayout = true;

}


<div class="collapse" id="AdvancedFilter">
    <div class="card-header border-bottom">
        <h4 class="card-title">@Localizer.Get("Advanced Search")</h4>
    </div>

    <div class="card-body mt-2">
        <form asp-action="LoadTable" class="filter">

            <div class="row g-1 mb-md-1">
                <div class="col-md-12 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Players" class="form-label">@Localizer.Get("Fk_Players")</label>
                        <select asp-for="Fk_Players" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Players"] as Dictionary<string,string>,"Key","Value"))">
                        </select>
                    </div>
                </div>

                <div class="col-md-12 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Teams" class="form-label">@Localizer.Get("Teams")</label>
                        <select asp-for="Fk_Teams" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string,string>,"Key","Value"))">
                        </select>
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Home" class="form-label">@Localizer.Get("HomeTeam")</label>
                        <select asp-for="Fk_Home" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Away" class="form-label">@Localizer.Get("AwayTeam")</label>
                        <select asp-for="Fk_Away" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_GameWeak" class="form-label">@Localizer.Get("GameWeak")</label>
                        <select asp-for="Fk_GameWeak" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["GameWeak"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Season" class="form-label">@Localizer.Get("Season")</label>
                        <select asp-for="Fk_Season" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Season"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-md-4 col-12">
                    <div class="mb-1">
                        <label asp-for="IsEnded" class="form-label">@Localizer.Get("IsEnded")</label>
                        <select asp-for="IsEnded" class="select2 form-select">
                            <option value="">@Localizer.Get("all")</option>
                            <option value="true">@Localizer.Get("Yes")</option>
                            <option value="false">@Localizer.Get("No")</option>
                        </select>
                    </div>
                </div>
                
            </div>

            <div class="row g-1 mb-md-1">

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="RateFrom" class="form-label">@Localizer.Get("RateFrom")</label>
                        <input type="text" class="form-control" asp-for="RateFrom">
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="RateTo" class="form-label">@Localizer.Get("RateTo")</label>
                        <input type="text" class="form-control" asp-for="RateTo">
                    </div>
                </div>

            </div>
            <div class="row g-1 mb-md-1">

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="PointsFrom" class="form-label">@Localizer.Get("PointsFrom")</label>
                        <input type="text" class="form-control" asp-for="PointsFrom">
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="PointsTo" class="form-label">@Localizer.Get("PointsTo")</label>
                        <input type="text" class="form-control" asp-for="PointsTo">
                    </div>
                </div>

            </div>
            <hr />
            <br />
            <div class="row g-1 mb-md-1">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">@Localizer.Get("Search")</button>
                    <button type="reset" class="btn btn-outline-secondary">@Localizer.Get("Reset")</button>

                </div>
            </div>
        </form>
    </div>

    <!-- END: Content-->
</div>

