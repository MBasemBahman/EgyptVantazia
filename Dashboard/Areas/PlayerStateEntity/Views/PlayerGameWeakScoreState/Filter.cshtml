@model Dashboard.Areas.PlayerStateEntity.Models.PlayerGameWeakScoreStateFilter
@{
    ViewData["Title"] = Localizer.Get("Advanced Search");
    ViewBag.emptyLayout = true;

    bool isProfile = ViewData["ProfileLayOut"] != null ? (bool)ViewData["ProfileLayOut"] : false;
}


<div class="collapse" id="AdvancedFilter">
    <div class="card-header border-bottom">
        <h4 class="card-title">@Localizer.Get("Advanced Search")</h4>
    </div>

    <div class="card-body mt-2">
        <form asp-action="LoadTable" class="filter">

            <div class="row g-1 mb-md-1">
                @if (!isProfile)
                {
                    <div class="col-md-12 col-12">
                        <div class="mb-1">
                            <label asp-for="Fk_Players" class="form-label">@Localizer.Get("Players")</label>
                            <select asp-for="Fk_Players" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Player"] as Dictionary<string, string>, "Key", "Value"))">
                            </select>
                        </div>
                    </div>
                }

                <div class="col-md-12 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_ScoreStates" class="form-label">@Localizer.Get("ScoreStates")</label>
                        <select asp-for="Fk_ScoreStates" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["ScoreState"] as Dictionary<string, string>, "Key", "Value"))">
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Season" class="form-label">@Localizer.Get("Season")</label>
                        <select class="form-control select2" asp-for="Fk_Season" asp-items="@(new SelectList(ViewData["Season"] as Dictionary<string, string>, "Key", "Value"))">
                            <option value="">@Localizer.Get("All")</option>
                        </select>
                        <span asp-validation-for="Fk_Season" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_GameWeaks" class="form-label">@Localizer.Get("GameWeak")</label>
                        <select asp-for="Fk_GameWeaks" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["GameWeak"] as Dictionary<string, string>, "Key", "Value"))">
                        </select>
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="PercentFrom" class="form-label">@Localizer.Get("PercentFrom")</label>
                        <input type="text" class="form-control" asp-for="PercentFrom">
                    </div>
                </div>

                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="PercentTo" class="form-label">@Localizer.Get("PercentTo")</label>
                        <input type="text" class="form-control" asp-for="PercentTo">
                    </div>
                </div>

            </div>
                <div class="row g-1 mb-md-1">
        
                    <div class="col-md-6 col-12">
                        <div class="mb-1">
                            <label asp-for="PointsFrom" class="form-label">@Localizer.Get("PointsFrom")</label>
                            <input type="text" class="form-control" asp-for="PointsFrom">
                        </div>
                    </div>
        
                    <div class="col-md-6 col-12">
                        <div class="mb-1">
                            <label asp-for="PointsTo" class="form-label">@Localizer.Get("PointsTo")</label>
                            <input type="text" class="form-control" asp-for="PointsTo">
                        </div>
                    </div>
                </div>
                <div class="row g-1 mb-md-1">
                    
                    <div class="col-md-6 col-12">
                        <div class="mb-1">
                            <label asp-for="ValueFrom" class="form-label">@Localizer.Get("ValueFrom")</label>
                            <input type="text" class="form-control" asp-for="ValueFrom">
                        </div>
                    </div>
                    
                    <div class="col-md-6 col-12">
                        <div class="mb-1">
                            <label asp-for="ValueTo" class="form-label">@Localizer.Get("ValueTo")</label>
                            <input type="text" class="form-control" asp-for="ValueTo">
                        </div>
                    </div>
                </div>
            <hr />
            <br />
            <div class="row g-1 mb-md-1">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary player_gameweak_state_score_filter">@Localizer.Get("Search")</button>
                    <button type="reset" class="btn btn-outline-secondary">@Localizer.Get("Reset")</button>

                </div>
            </div>
        </form>
    </div>

    <!-- END: Content-->
</div>

