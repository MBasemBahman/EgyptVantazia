@model TeamGameWeakFilter
@{
    ViewData["Title"] = Localizer.Get("Advanced Search");
    ViewBag.emptyLayout = true;

}


<div class="collapse" id="AdvancedFilter">
    <div class="card-header border-bottom">
        <h4 class="card-title">@Localizer.Get("Advanced Search")</h4>
    </div>

    <div class="card-body mt-2">
        <form asp-action="LoadTable" class="filter">
                <div class="row g-1 mb-md-1">
                    <div class="col-md-12 col-12">
                        <div class="mb-1">
                            <label asp-for="Fk_Teams" class="form-label"></label>
                            <select asp-for="Fk_Teams" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string,string>,"Key","Value"))">
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="mb-1">
                            <label asp-for="Fk_Home" class="form-label"></label>
                            <select asp-for="Fk_Home" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string,string>,"Key","Value"))">
                                <option value="0">@Localizer.Get("All")</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Away" class="form-label"></label>
                        <select asp-for="Fk_Away" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Team"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
             
            </div>
            <div class="row g-1 mb-md-1">
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_Season" class="form-label"></label>
                        <select asp-for="Fk_Season" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["Season"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="Fk_GameWeak" class="form-label"></label>
                        <select asp-for="Fk_GameWeak" class="select2 form-select" asp-items="@(new MultiSelectList(ViewData["GameWeak"] as Dictionary<string,string>,"Key","Value"))">
                            <option value="0">@Localizer.Get("All")</option>
                        </select>
                    </div>
                </div>
             
            </div>

            <div class="row g-1 mb-md-1">
                
                <div class="col-md-4 col-12">
                    <div class="mb-1">
                        <label asp-for="IsDelayed" class="form-label"></label>
                        <select class="form-control select2" asp-for="IsDelayed">
                            <option value="">@Localizer.Get("All")</option>
                            <option value="true">@Localizer.Get("Yes")</option>
                            <option value="false">@Localizer.Get("No")</option>
                        </select>
                        <span asp-validation-for="IsDelayed" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4 col-12">
                    <div class="mb-1">
                        <label asp-for="IsCanNotEdit" class="form-label"></label>
                        <select class="form-control select2" asp-for="IsCanNotEdit">
                            <option value="">@Localizer.Get("All")</option>
                            <option value="true">@Localizer.Get("Yes")</option>
                            <option value="false">@Localizer.Get("No")</option>
                        </select>
                        <span asp-validation-for="IsCanNotEdit" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4 col-12">
                    <div class="mb-1">
                        <label asp-for="IsActive" class="form-label"></label>
                        <select class="form-control select2" asp-for="IsActive">
                            <option value="">@Localizer.Get("All")</option>
                            <option value="true">@Localizer.Get("Yes")</option>
                            <option value="false">@Localizer.Get("No")</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6 col-12">
                    <div class="mb-1">
                        <label asp-for="IsEnded" class="form-label"></label>
                        <select asp-for="IsEnded" class="select2 form-select">
                            <option value="" selected>@Localizer.Get("All")</option>
                            <option value="true">@Localizer.Get("Yes")</option>
                            <option value="false">@Localizer.Get("No")</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="FromTime" class="form-label"></label>
                    <div class="mb-0">
                        <input type="text" class="form-control dt-date flatpickr-range dt-input flatpickr-input active" data-column="1" placeholder="@Localizer.Get("From Date To Date")" data-column-index="0" name="dt_date" readonly="readonly">
                        <input type="hidden" class="form-control dt-date start_date dt-input" data-column="1" data-column-index="0" asp-for="FromTime">
                        <input type="hidden" class="form-control dt-date end_date dt-input" asp-for="ToTime" data-column="1" data-column-index="0">
                    </div>
                </div>

            </div>
            <hr />
            <br />
            <div class="row g-1 mb-md-1">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">@Localizer.Get("Search")</button>
                    <button type="reset" class="btn btn-outline-secondary">@Localizer.Get("Reset")</button>

                </div>
            </div>
        </form>
    </div>

    <!-- END: Content-->
</div>

