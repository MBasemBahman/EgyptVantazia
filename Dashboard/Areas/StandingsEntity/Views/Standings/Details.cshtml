@model StandingsDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.emptyLayout = true;
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalScrollableTitle">@Localizer.Get("Standings")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
   
    <div class="row">
        <div class="col-xl-7 col-12">
            <dl class="row mb-0">

                <dt class="col-sm-4 fw-bolder mb-1">@Localizer.Get("Team"):</dt>
                <dd class="col-sm-8 mb-1">
                    <a href="/TeamEntity/Team/Profile/@Model.Fk_Team" target="_blank">@Model.Team.Name</a>

                </dd>
                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.GamePlayed):</dt>
                <dd class="col-sm-8 mb-1">@Model.GamePlayed</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.GamesLost):</dt>
                <dd class="col-sm-8 mb-1">@Model.GamesLost</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.For):</dt>
                <dd class="col-sm-8 mb-1">@Model.For</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.Ratio):</dt>
                <dd class="col-sm-8 mb-1">@Model.Ratio</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.Strike):</dt>
                <dd class="col-sm-8 mb-1">@Model.Strike</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.Points):</dt>
                <dd class="col-sm-8 mb-1">@Model.Points</dd>


            </dl>
        </div>
        <div class="col-xl-5 col-12">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.Season):</dt>
                <dd class="col-sm-8 mb-1">
                    <a href="/SeasonEntity/Season/Profile/@Model.Fk_Season" target="_blank">@Model.Season.Name</a>
                </dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.GamesWon):</dt>
                <dd class="col-sm-8 mb-1">@Model.GamesWon</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.GamesEven):</dt>
                <dd class="col-sm-8 mb-1">@Model.GamesEven</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.Against):</dt>
                <dd class="col-sm-8 mb-1">@Model.Against</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.Position):</dt>
                <dd class="col-sm-8 mb-1">@Model.Position</dd>


            </dl>
        </div>

    </div>

    <hr />
    <div class="row">
        <div class="col-xl-7 col-12">
            <dl class="row mb-0">

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.CreatedBy):</dt>
                <dd class="col-sm-8 mb-1">@Model.CreatedBy</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.LastModifiedBy):</dt>
                <dd class="col-sm-8 mb-1">@Model.LastModifiedBy</dd>

            </dl>
        </div>
        <div class="col-xl-5 col-12">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.CreatedAt):</dt>
                <dd class="col-sm-8 mb-1">@Model.CreatedAt</dd>

                <dt class="col-sm-4 fw-bolder mb-1">@Html.DisplayNameFor(model => model.LastModifiedAt):</dt>
                <dd class="col-sm-8 mb-1">@Model.LastModifiedAt</dd>
            </dl>
        </div>
    </div>
</div>

