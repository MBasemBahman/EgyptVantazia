@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Entities.CoreServicesModels.SeasonModels
@{
    GameWeakModel current = (GameWeakModel)ViewData["CurrentGameWeak"];
}

<div class="modal fade text-start text-center update_account_team_points_modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">@Localizer.Get("UpdateAccountTeamPoints")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-12 col-12">

                        <div asp-validation-summary="All" class="text-danger">@ViewData["Error"]</div>
                        <div class="row mb-1">
                            <input type="hidden" name="Fk_AccountTeamGameWeak" value="0" />
                        </div>
                        
                        <div class="col-md-12 col-12">
                            <div class="mb-1">
                                <label class="form-label">@Localizer.Get("GameWeak")</label>
                                <select class="select2 form-select" name="Fk_GameWeak"
                                        asp-items="@(new SelectList(ViewData["GameWeak"] as Dictionary<string, string>, "Key", "Value"))">
                                    <option value="">@Localizer.Get("Not Selected")</option>
                                </select>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-1 update_account_team_points_submit" data-bs-dismiss="modal">@Localizer.Get("Submit")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>